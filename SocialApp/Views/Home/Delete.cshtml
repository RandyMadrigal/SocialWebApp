@using SocialApp.Core.Application.ViewModels.Publication

@model SavePublicationVm;

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container my-5">


    <div class="col-md-5 offset-3 my-5 mt-4">

        <div class="card bg-dark border border-danger">
            <div class="card-header bg-dark text-white text-center rounded-end ">
                <h3> ¿Deseas eliminar el anuncio? </h3>
            </div>

            <div class="card-body">

                <form method="post" asp-controller="Home" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <div class="my-2 text-center">

                        <button type="submit" class="btn btn-outline-danger btn-lg"> Eliminar </button>

                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-primary mx-3 btn-lg"> Cancelar </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-5 offset-4 my-5">

        <div class="col-md-4">

            <div class="card bg-dark bg-opacity-50 animate__animated animate__fadeIn">
                <img src="@Model.PostImg"
                     class="rounded mx-auto d-block img-size-Home text-white" alt="no hay imagen disponible">
            </div>
        </div>

    </div>


</div>

